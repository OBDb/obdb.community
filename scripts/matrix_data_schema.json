{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "hdr": {
        "type": "string",
        "description": "ECU header"
      },
      "eax": {
        "type": "string",
        "description": "Extended address (used by BMW vehicles)"
      },
      "pid": {
        "type": "string",
        "description": "Parameter ID"
      },
      "cmd": {
        "type": "object",
        "description": "Command object"
      },
      "id": {
        "type": "string",
        "description": "Signal identifier"
      },
      "name": {
        "type": "string",
        "description": "Signal name"
      },
      "unit": {
        "type": ["string", "null"],
        "description": "Signal unit"
      },
      "suggestedMetric": {
        "type": ["string", "null"],
        "description": "Suggested metric for this signal"
      },
      "scaling": {
        "type": "string",
        "description": "Human-readable scaling formula"
      },
      "path": {
        "type": ["string", "null"],
        "description": "Optional signal path"
      },
      "make": {
        "type": "string",
        "description": "Vehicle make"
      },
      "model": {
        "type": "string",
        "description": "Vehicle model"
      },
      "modelYears": {
        "type": ["array", "null"],
        "description": "Model years this parameter applies to",
        "items": {
          "type": "integer"
        },
        "minItems": 2,
        "maxItems": 2
      },
      "bitOffset": {
        "type": "integer",
        "description": "Bit offset/index for the signal",
        "minimum": 0
      },
      "bitLength": {
        "type": "integer",
        "description": "Number of bits used by the signal",
        "minimum": 1
      },
      "debug": {
        "type": "boolean",
        "description": "Whether this parameter is in debug mode",
        "default": false
      }
    },
    "required": [
      "hdr",
      "pid",
      "cmd",
      "id",
      "name",
      "scaling",
      "make",
      "model",
      "bitOffset",
      "bitLength"
    ]
  }
}
